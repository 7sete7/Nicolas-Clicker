{
	"extends": "@tsconfig/node16/tsconfig.json",
	"compilerOptions": {
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"target": "es2017",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"lib": ["ES6"],
		"strict": true,
		"esModuleInterop": true,
		"declaration": true,
		"emitDeclarationOnly": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
